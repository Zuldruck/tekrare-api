datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator photon {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  pseudo    String    @unique
  password  String
  isAdmin   Boolean?  @default(false)
}

